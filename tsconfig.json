{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "commonjs",                                         
    "esModuleInterop": true,                                                  
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                          
    "skipLibCheck": true,
    "resolveJsonModule": true,    
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "."                  
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ],
}
