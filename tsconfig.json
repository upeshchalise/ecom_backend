{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "commonjs",                                         
    "esModuleInterop": true,                                                  
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                          
    "skipLibCheck": true,
    "resolveJsonModule": true,                      
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ],
}
